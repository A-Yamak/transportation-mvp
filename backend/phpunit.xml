<?xml version="1.0" encoding="UTF-8"?>
<!--
Al-Sabiqoon PHPUnit Configuration

Enhanced configuration for Test-Driven Development (TDD).

Usage:
  php artisan test                    - Run all tests
  php artisan test testsuite=Unit     - Run only unit tests
  php artisan test coverage           - Run with coverage report
-->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         failOnRisky="true"
         failOnWarning="true"
         stopOnFailure="false"
         cacheDirectory=".phpunit.cache"
         backupGlobals="false"
         beStrictAboutTestsThatDoNotTestAnything="true"
>
    <!-- Test Suites -->
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>tests/Integration</directory>
        </testsuite>
    </testsuites>

    <!-- Source Code Coverage -->
    <source>
        <include>
            <directory>app</directory>
        </include>
        <exclude>
            <directory>app/Console</directory>
            <directory>app/Exceptions</directory>
            <directory>app/Providers</directory>
        </exclude>
    </source>

    <!-- Coverage Report Configuration -->
    <coverage>
        <report>
            <html outputDirectory="storage/coverage/html"/>
            <clover outputFile="storage/coverage/clover.xml"/>
            <text outputFile="storage/coverage/coverage.txt"/>
        </report>
    </coverage>

    <!-- Test Environment Configuration -->
    <php>
        <!-- Application -->
        <env name="APP_ENV" value="testing" force="true"/>
        <env name="APP_DEBUG" value="true" force="true"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file" force="true"/>

        <!-- Security (faster hashing for tests) -->
        <env name="BCRYPT_ROUNDS" value="4" force="true"/>

        <!-- Database (separate MySQL testing database) -->
        <!-- Note: Using MySQL instead of SQLite due to Docker env override issues -->
        <!-- Test database is auto-created by infrastructure/docker/mysql/init-test-db.sql -->
        <!-- See: https://github.com/sebastianbergmann/phpunit/issues/4540 -->
        <env name="DB_CONNECTION" value="mysql" force="true"/>
        <env name="DB_HOST" value="mysql" force="true"/>
        <env name="DB_PORT" value="3306" force="true"/>
        <env name="DB_DATABASE" value="alsabiqoon_testing" force="true"/>
        <env name="DB_USERNAME" value="transportationapp" force="true"/>
        <env name="DB_PASSWORD" value="secret" force="true"/>

        <!-- Caching (array driver for isolation) -->
        <env name="CACHE_STORE" value="array" force="true"/>

        <!-- Queue (sync for immediate execution) -->
        <env name="QUEUE_CONNECTION" value="sync" force="true"/>

        <!-- Session (array driver for isolation) -->
        <env name="SESSION_DRIVER" value="array" force="true"/>

        <!-- Broadcasting -->
        <env name="BROADCAST_CONNECTION" value="null" force="true"/>

        <!-- Mail (array driver - no actual sending) -->
        <env name="MAIL_MAILER" value="array" force="true"/>

        <!-- Google Maps API (fake key for testing) -->
        <env name="GOOGLE_MAPS_API_KEY" value="test-api-key-for-testing" force="true"/>

        <!-- Disable debugging tools in tests -->
        <env name="TELESCOPE_ENABLED" value="false" force="true"/>
        <env name="HORIZON_ENABLED" value="false" force="true"/>
        <env name="PULSE_ENABLED" value="false" force="true"/>
        <env name="NIGHTWATCH_ENABLED" value="false" force="true"/>

        <!-- Passport (match production - hash client secrets) -->
        <env name="PASSPORT_HASH_CLIENT_SECRETS" value="true" force="true"/>
    </php>
</phpunit>
