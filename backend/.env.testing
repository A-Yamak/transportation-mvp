APP_ENV=testing
APP_DEBUG=true

# Use separate MySQL testing database (not SQLite)
# This avoids Docker env override issues
# The test database is auto-created by infrastructure/docker/mysql/init-test-db.sql
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=alsabiqoon_testing
DB_USERNAME=transportationapp
DB_PASSWORD=secret

# Use array drivers for isolation in tests
CACHE_STORE=array
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
MAIL_MAILER=array

# Fast password hashing for tests
BCRYPT_ROUNDS=4

# Disable debugging tools in tests
TELESCOPE_ENABLED=false
HORIZON_ENABLED=false
PULSE_ENABLED=false
NIGHTWATCH_ENABLED=false

# Google Maps API (mock key for testing)
GOOGLE_MAPS_API_KEY=test-api-key-for-testing

# Passport OAuth (hash secrets to match production)
PASSPORT_HASH_CLIENT_SECRETS=true
